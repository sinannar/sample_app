<li class="list-group-item">
	<%= link_to user.name ,user %>
	<% if current_user.admin?  %>
	    <span class="badge"><%= link_to "Delete", 
				user, 
				:method => :delete,
				:confirm => 'Are u sure ?' ,
		 		:title => "Delete #{user.name}",
		 		:style => "color:#fff" %></span>
 
	
	<% end %>
</li>