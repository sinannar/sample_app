<tr>
	<td class ="micropost">
		<span class = "user">
			<%= link_to feed_item.user.name, feed_item.user %></br>
		</span>
		<span class = "content">
			link:<%= feed_item.content %></br>
		</span>
		<span class = "tag">

			<% if !microposts_helper_categories(feed_item.tag).nil?  %>
				<% microposts_helper_categories(feed_item.tag).each do |n|%></br>
					<p><%= n %></p>
				<%end%>
			<%end%>

		</span>
		<span class = "timestamp">
			Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
		</span>
	</td>

	<% if current_user?(feed_item.user) %>
		<td><%= link_to "delete", feed_item ,:method => :delete ,
											:confirm => "Are you sure",
											:title => feed_item.content	%>
		</td>
	<% end %>
</tr>